# ===========================================
# GENERIC API TEMPLATE - Environment Configuration
# ===========================================

# Application Settings
APP_NAME="Generic API Template"
APP_VERSION="1.0.0"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Security & JWT
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this
JWT_EXPIRES_IN=86400

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=generic_api_db
DB_USER=root
DB_PASS=your_password

# Email Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Development Settings
FORCE_MAIL_TO=test@example.com
CROSS_ORIGIN_ACCEPTED_URL=http://localhost:3000

# File Storage
STORAGE_DRIVER=local
UPLOAD_MAX_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=file

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=60